<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <Operation Class="PatchOperationAdd" MayRequire="phonicmas.rimdark.frameworkcore">
        <xpath>Defs/ThingDef[@Name="SEG_COTO_RobeBase" and not(comps)]</xpath>
        <value>
            <comps />
        </value>
    </Operation>

    <Operation Class="PatchOperationAdd" MayRequire="phonicmas.rimdark.frameworkcore">
        <xpath>Defs/ThingDef[@Name="SEG_COTO_RobeBase"]/comps</xpath>
        <value>
            <li Class="Core40k.CompProperties_MultiColor">
                <defaultPrimaryColor>(1, 1, 1)</defaultPrimaryColor>
                <defaultSecondaryColor>(1, 1, 1)</defaultSecondaryColor>
                <tabDefs>
                    <li>BEWH_ExtraDecoration</li>
                </tabDefs>
            </li>
            <li Class="Core40k.CompProperties_Decorative">
                <decorativeType>Body</decorativeType>
            </li>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace" MayRequire="phonicmas.rimdark.frameworkcore">
        <xpath>Defs/ThingDef[@Name="SEG_COTO_RobeBase"]/graphicData/shaderType</xpath>
        <value>
            <shaderType>BEWH_CutoutThreeColor</shaderType>
        </value>
    </Operation>

</Patch>