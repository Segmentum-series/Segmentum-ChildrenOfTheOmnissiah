<?xml version="1.0" encoding="utf-8"?>
<Defs>
<HediffDef>
    <defName>SEG_COTO_RadBuildup</defName>
    <label>Rad-Poisoning</label>
    <description>the deleterous effects of being exposed to a radiation. Will slowly go away on its own, but very likely to cause cancers and severely weakens pawns.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.9, 0.8, 0.4)</defaultLabelColor>
    <lethalSeverity>1</lethalSeverity>
    <canApplyDodChanceForCapacityChanges>true</canApplyDodChanceForCapacityChanges>
    <makesSickThought>true</makesSickThought>
    <scenarioCanAdd>true</scenarioCanAdd>
    <taleOnVisible>ToxicityRevealed</taleOnVisible>

    <comps>
        <li Class="HediffCompProperties_Immunizable">
            <compClass>HediffComp_ImmunizableToxic</compClass>
            <severityPerDayNotImmune>-0.01</severityPerDayNotImmune>
        </li>
        <li Class="HediffCompProperties_SurgeryInspectable">
            <surgicalDetectionDesc>{PAWN_nameDef} is showing signs of radiation exposure.</surgicalDetectionDesc>
        </li>
    </comps>

    <stages>
        <li>
            <label>initial</label>
            <becomeVisible>false</becomeVisible>
        </li>

        <li>
            <label>initial</label>
            <minSeverity>0.04</minSeverity>
            <capMods>
                <li>
                    <capacity>Consciousness</capacity>
                    <offset>-0.05</offset>
                </li>
                <li>
                    <capacity>BloodFiltration</capacity>
                    <offset>-0.20</offset>
                </li>
            </capMods>
            <hediffGivers>
                <li Class="HediffGiver_Random">
                    <hediff>Carcinoma</hediff>
                    <mtbDays>400</mtbDays>
                    <canAffectAnyLivePart>true</canAffectAnyLivePart>
                </li>
            </hediffGivers>
        </li>

        <li>
            <label>minor</label>
            <minSeverity>0.20</minSeverity>
            <capMods>
                <li>
                    <capacity>Consciousness</capacity>
                    <offset>-0.10</offset>
                </li>
                <li>
                    <capacity>BloodFiltration</capacity>
                    <offset>-0.15</offset>
                </li>
                  <li>
                    <capacity>BloodFiltration</capacity>
                    <offset>-0.10</offset>
                </li>
            </capMods>
            <hediffGivers>
                <li Class="HediffGiver_Random">
                    <hediff>Carcinoma</hediff>
                    <mtbDays>250</mtbDays>
                    <canAffectAnyLivePart>true</canAffectAnyLivePart>
                </li>
            </hediffGivers>
        </li>

        <li>
            <label>moderate</label>
            <minSeverity>0.40</minSeverity>
            <vomitMtbDays>4</vomitMtbDays>
            <capMods>
                <li>
                    <capacity>Consciousness</capacity>
                    <offset>-0.15</offset>
                </li>
                <li>
                    <capacity>BloodFiltration</capacity>
                    <offset>-0.30</offset>
                </li>
            </capMods>
            <hediffGivers>
                <li Class="HediffGiver_Random">
                    <hediff>Carcinoma</hediff>
                    <mtbDays>150</mtbDays>
                    <canAffectAnyLivePart>true</canAffectAnyLivePart>
                </li>
            </hediffGivers>
        </li>

        <li>
            <label>serious</label>
            <minSeverity>0.60</minSeverity>
            <vomitMtbDays>1</vomitMtbDays>
            <capMods>
                <li>
                    <capacity>Consciousness</capacity>
                    <offset>-0.25</offset>
                </li>
                <li>
                    <capacity>BloodFiltration</capacity>
                    <offset>-0.05</offset>
                </li>
                <li>
                    <capacity>BloodPumping</capacity>
                    <offset>-0.50</offset>
                </li>
            </capMods>
            <hediffGivers>
                <li Class="HediffGiver_Random">
                    <hediff>Carcinoma</hediff>
                    <mtbDays>80</mtbDays>
                    <canAffectAnyLivePart>true</canAffectAnyLivePart>
                </li>
            </hediffGivers>
        </li>

        <li>
            <label>extreme</label>
            <minSeverity>0.80</minSeverity>
            <vomitMtbDays>0.5</vomitMtbDays>
            <capMods>
                <li>
                    <capacity>Consciousness</capacity>
                    <setMax>0.10</setMax>
                </li>
                <li>
                    <capacity>Consciousness</capacity>
                    <offset>-0.25</offset>
                </li>
                <li>
                    <capacity>BloodFiltration</capacity>
                    <offset>0.10</offset>
                </li>
                <li>
                    <capacity>BloodPumping</capacity>
                    <offset>-0.20</offset>
                </li>
            </capMods>
            <hediffGivers>
                <li Class="HediffGiver_Random">
                    <hediff>Carcinoma</hediff>
                    <mtbDays>40</mtbDays>
                    <canAffectAnyLivePart>true</canAffectAnyLivePart>
                </li>
            </hediffGivers>
        </li>
    </stages>
</HediffDef>
</Defs>