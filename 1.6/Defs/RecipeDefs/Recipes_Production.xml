<?xml version="1.0" encoding="utf-8"?>
<Defs>
<!-- With devilstrand -->
	<RecipeDef>
		<defName>GW_Make_CeramiteDevilstrand</defName>
		<label>make ceramite with devilstrand</label>
		<description>Mix ceramite, a strong ceramic-metallic hyperalloy used in high-end armor applications.</description>
		<jobString>manufacturing ceramite.</jobString>
		<workAmount>1000</workAmount>
		<workSpeedStat>SmeltingSpeed</workSpeedStat>
		<effectWorking>CutStone</effectWorking>
		<soundWorking>Recipe_MakeStoneBlocks</soundWorking>
		<targetCountAdjustment>20</targetCountAdjustment>
		<ingredients>
			<li>
				<filter>
				<categories>
					<li>StoneBlocks</li>
				</categories>
				</filter>
				<count>40</count>
			</li>
			<li>
				<filter>
				<thingDefs>
					<li>Steel</li>
				</thingDefs>
				</filter>
				<count>20</count>
			</li>
			<li>
				<filter>
				<thingDefs>
					<li>DevilstrandCloth</li>
				</thingDefs>
				</filter>
				<count>6</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>StoneBlocks</li>
			</categories>
		</fixedIngredientFilter>
		<recipeUsers>
			<li>Seg_COTO_CeramiteFurnace</li>
		</recipeUsers>
		<products>
			<Seg_COTO_Ceramite>30</Seg_COTO_Ceramite>
		</products>
	</RecipeDef>

