		<thingClass>Apparel</thingClass>
		<graphicData>
			<graphicClass>Graphic_Multi</graphicClass>
			<shaderType>BEWH_CutoutThreeColor</shaderType>
			<drawSize>1.0</drawSize>
		</graphicData>
		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
		<tradeTags>
			<li>Seg_COTO_Skitarii</li>
		</tradeTags>
		<apparel>
			<tags>
				<li>Seg_COTO_Skitarii</li>
			</tags>
			<countsAsClothingForNudity>true</countsAsClothingForNudity>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<recipeMaker>
			<researchPrerequisites>
				<li>Seg_COTO_TechGuard</li>
