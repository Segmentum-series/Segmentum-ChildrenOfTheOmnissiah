		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.15</MoveSpeed>
			<CarryingCapacity>50</CarryingCapacity>
			<VEF_MassCarryCapacity>50</VEF_MassCarryCapacity>
		</equippedStatOffsets>

		<costList>
			<Steel>20</Steel>
			<ComponentIndustrial>1</ComponentIndustrial>
			<Cloth>40</Cloth>
		</costList>

		<apparel>
			<tags>
				<li>Seg_COTO_Skitarii</li>
			</tags>
			<countsAsClothingForNudity>true</countsAsClothingForNudity>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Shoulders</li>
			</bodyPartGroups>
			<layers>
				<li>Backpack</li>
			</layers>
			<defaultOutfitTags>
