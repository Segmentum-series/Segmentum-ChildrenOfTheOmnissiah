	<!-- Skitarii bodysuit -->
	<ThingDef ParentName="Seg_COTO_SkitariiBase">
		<defName>Seg_COTO_Apparel_SkitariiFatigues</defName>
		<label>skitarii bodysuit</label>
		<description>A bodysuit utilized in the entire Skitarii range. It's designed to cover only the fleshy bits of the remaining body of the tech-guards, giving a degree of environmental protection, while being adaptable to their ever decreasing biomass.\n\n&lt;color=#40cbde&gt;Customizable in the styling station or Mechanicus forge altar&lt;/color&gt;.</description>

		<graphicData>
			<graphicClass>Graphic_Multi</graphicClass>
			<shaderType>BEWH_CutoutThreeColor</shaderType>
			<texPath>Things/Apparel/SkitariiFatigues/Seg_COTO_SkitariiFatigues</texPath>
		</graphicData>

		<statBases>
			<WorkToMake>6000</WorkToMake>
			<MaxHitPoints>350</MaxHitPoints>
			<Mass>2.2</Mass>
			<ArmorRating_Sharp>0.3</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.20</ArmorRating_Blunt>
			<ArmorRating_Heat>0.56</ArmorRating_Heat> <!-- all random ass values for now, delete this comment when correct values implemneted--> 
		</statBases>

		<costList>
			<Steel>20</Steel>
			<ComponentIndustrial>1</ComponentIndustrial>
			<Hyperweave>40</Hyperweave>
			<Seg_COTO_Ceramite>15</Seg_COTO_Ceramite>
		</costList>

		<apparel>
			<useWornGraphicMask>true</useWornGraphicMask>
			<tags>
				<li>Seg_COTO_Robe</li>
				<li>Seg_COTO_Skitarii</li>
			</tags>
			<countsAsClothingForNudity>true</countsAsClothingForNudity>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Shoulders</li>
				<li>Neck</li>
				<li>Legs</li>
				<li>Arms</li>
			</bodyPartGroups>
			<layers>
				<li>OnSkin</li>
			</layers>
			<defaultOutfitTags>
				<li>Worker</li>
			</defaultOutfitTags>
			<wornGraphicPaths>
				<li>Things/Apparel/SkitariiFatigues/Seg_COTO_SkitariiFatigues</li>
			</wornGraphicPaths>
		</apparel>
		<comps>
			<li Class="Core40k.CompProperties_MultiColor" MayRequire="phonicmas.rimdark.frameworkcore">
				<defaultPrimaryColor>(0.31, 0.37, 0.40)</defaultPrimaryColor>
				<defaultSecondaryColor>(0.64, 0.64, 0.64)</defaultSecondaryColor>
				<!-- It has no extra decorations -->
			</li>
		</comps>
	</ThingDef>

	<!-- Skitarii backpack -->
	<ThingDef ParentName="Seg_COTO_SkitariiBase">
		<defName>Seg_COTO_Apparel_SkitariiBackpack</defName>
		<label>skitarii powerpack</label>
		<description>A powered backpack, designed for the usage of the Mechanicus arsenal by the Skitarii forces.\n\n&lt;color=#40cbde&gt;Customizable in the styling station or Mechanicus forge altar&lt;/color&gt;.</description>

		<graphicData>
			<graphicClass>Graphic_Multi</graphicClass>
			<shaderType>BEWH_CutoutThreeColor</shaderType>
			<texPath>Things/Apparel/SkitariiBackpack/Seg_COTO_SkitariiBackpack</texPath>
		</graphicData>

		<statBases>
			<WorkToMake>6000</WorkToMake>
			<MaxHitPoints>350</MaxHitPoints>
			<Mass>2.2</Mass>
			<ArmorRating_Sharp>0.10</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.10</ArmorRating_Blunt>
