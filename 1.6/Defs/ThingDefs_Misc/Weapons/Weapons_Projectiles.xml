<!-- Arc -->
	

	<!-- Arc pistol beam -->
	<ThingDef ParentName="BaseBullet">
  		<defName>Seg_COTO_ArcPistol_Beam</defName>
  		<label>arc pistol beam</label>
  		<description>A smaller, lighter, and more portable variant of the arc weaponry. Despite its size, it will still fry more than a motherboard.</description>
		<thingClass>taranchuk_lasers.LaserProjectile</thingClass>
		<category>Projectile</category>
		<drawOffscreen>true</drawOffscreen>
		<seeThroughFog>true</seeThroughFog>

		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<texPath>Things/Projectile/Seg_COTO_Arc</texPath>
			<shaderType>TransparentPostLight</shaderType>
			<drawSize>2</drawSize>
		</graphicData>

		<projectile>
			<damageDef>Seg_COTO_ArcDamage</damageDef>
			<damageAmountBase>2</damageAmountBase>
			<armorPenetrationBase>.45</armorPenetrationBase>
			<stoppingPower>0.2</stoppingPower>
			<speed>999</speed>
		</projectile>

		<modExtensions>
			<li Class="taranchuk_lasers.LaserProperties">
				<damageTickRate>2</damageTickRate>
				<lifetimeTicks>10</lifetimeTicks>

				<beamWidth>0.45</beamWidth>
				<beamWidthDrawScale>2.5</beamWidthDrawScale>

				<sweepRatePerTick>0.05</sweepRatePerTick>
				<maxSweepAngle>1</maxSweepAngle>

				<damageThingsAcrossBeamLine>true</damageThingsAcrossBeamLine>
				<debugCells>false</debugCells>

				<textureScrollOffsetPerTick>(1, 1)</textureScrollOffsetPerTick>
				<lockOnTarget>true</lockOnTarget>

				<trailSoundDef>Power_OnSmall</trailSoundDef>
			</li>
		</modExtensions>
	</ThingDef>

<!-- Gamma -->
	

	<!-- Gamma projectile -->
	<ThingDef ParentName="BaseBullet">
		<defName>Seg_COTO_GammaBeam</defName>
		<label>Gamma beam</label>
		<description>this should never been seen. if it is seen in game report to KitchenSink</description>
		<thingClass>taranchuk_lasers.LaserProjectile</thingClass>
		<category>Projectile</category>
		<drawOffscreen>true</drawOffscreen>
		<seeThroughFog>true</seeThroughFog>

		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<texPath>Things/Projectile/Seg_COTO_Gamma</texPath>
			<shaderType>TransparentPostLight</shaderType>
			<drawSize>1</drawSize>
		</graphicData>

		<projectile>
			<damageDef>Seg_COTO_GammaDamage</damageDef>
			<damageAmountBase>14</damageAmountBase>
			<armorPenetrationBase>0.30</armorPenetrationBase>
			<stoppingPower>1</stoppingPower>
			<speed>1000</speed>
			<soundImpact>Seg_COTO_GammaSound</soundImpact>
		</projectile>

		<modExtensions>
			<li Class="taranchuk_lasers.LaserProperties">
				<damageTickRate>11</damageTickRate>
				<lifetimeTicks>10</lifetimeTicks>
				<beamWidth>0.55</beamWidth>
				<beamWidthDrawScale>3</beamWidthDrawScale>
				<sweepRatePerTick>0.5</sweepRatePerTick>
				<maxSweepAngle>1</maxSweepAngle>
				<damageThingsAcrossBeamLine>true</damageThingsAcrossBeamLine>
				<debugCells>false</debugCells>
				<textureScrollOffsetPerTick>(5,5)</textureScrollOffsetPerTick>
				<lockOnTarget>true</lockOnTarget>
				<trailSoundDef>Seg_COTO_PhosphoreSound</trailSoundDef>
			</li>
		</modExtensions>
	</ThingDef>

