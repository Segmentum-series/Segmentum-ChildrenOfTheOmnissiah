<?xml version="1.0" encoding="utf-8"?>
<Defs><!-- Barebones doc -->

	<!-- Stubber bullet -->
	<ThingDef ParentName="BaseBullet">
		<defName>Seg_COTO_Bullet_Stubber</defName>
		<label>stubber bullet</label>
		<graphicData>
			<texPath>Things/Projectile/Bullet_Small</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile>
			<damageDef>Bullet</damageDef>
			<damageAmountBase>11</damageAmountBase>
		<speed>70</speed>
		</projectile>
	</ThingDef>

	<!-- Arc Damage -->
	<DamageDef ParentName="Bullet">
		<defName>Seg_COTO_ArcDamage</defName>
		<label>arc burn</label>
		<workerClass>DamageWorker_AddInjury</workerClass>
		<armorCategory>Heat</armorCategory>
		<hediff>Burn</hediff>
		<deathMessage>{0} was electrified to death.</deathMessage>
		<impactSoundType>Electric</impactSoundType>
		<defaultArmorPenetration>2.0</defaultArmorPenetration>
	</DamageDef>

	<!-- Arc Pistol Beam -->
	<ThingDef ParentName="BaseBullet">
  		<defName>Seg_COTO_ArcPistol_Beam</defName>
  		<label>arc pistol beam</label>
  		<description>A smaller, lighter, and more portable variant of the arc weaponry. Despite its size, it will still fry more than a motherboard.</description>
		<thingClass>taranchuk_lasers.LaserProjectile</thingClass>
		<category>Projectile</category>
		<drawOffscreen>true</drawOffscreen>
		<seeThroughFog>true</seeThroughFog>

		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<texPath>Things/Projectile/Seg_COTO_Arc</texPath>
			<shaderType>TransparentPostLight</shaderType>
			<drawSize>2</drawSize>
		</graphicData>

		<projectile>
			<damageDef>Seg_COTO_ArcDamage</damageDef>
			<damageAmountBase>10</damageAmountBase>
			<armorPenetrationBase>20</armorPenetrationBase>
			<stoppingPower>0.2</stoppingPower>
			<speed>999</speed>
		</projectile>

		<modExtensions>
			<li Class="taranchuk_lasers.LaserProperties">
				<damageTickRate>12</damageTickRate><!-- Keep at +1 from the lifetimeTicks -->
				<lifetimeTicks>11</lifetimeTicks>

				<beamWidth>0.45</beamWidth>
				<beamWidthDrawScale>2.5</beamWidthDrawScale>

				<sweepRatePerTick>0.05</sweepRatePerTick>
				<maxSweepAngle>1</maxSweepAngle>

				<damageThingsAcrossBeamLine>true</damageThingsAcrossBeamLine>
				<debugCells>false</debugCells>

				<textureScrollOffsetPerTick>(1, 1)</textureScrollOffsetPerTick>
				<lockOnTarget>true</lockOnTarget>

				<!-- <sustainerSoundDef>Seg_COTO_ArcSound</sustainerSoundDef>
				<sustainerTickPeriod>8</sustainerTickPeriod> -->
				<trailSoundDef>Electric</trailSoundDef>
			</li>
		</modExtensions>
	</ThingDef>	
	<!-- Gamma Damage -->
	<DamageDef>
  		<defName>Seg_COTO_GammaDamage</defName>
  		<label>Radiation burn</label>
  		<workerClass>DamageWorker_AddInjury</workerClass>
  		<externalViolence>true</externalViolence>
  		<hediff>Burn</hediff>
  		<armorCategory>Heat</armorCategory>
  		<deathMessage>{0} has been shown why you should never split atoms.</deathMessage>
	</DamageDef>
	<!-- Gamma Projectile -->
	<ThingDef ParentName="BaseBullet">
	<defName>Seg_COTO_GammaBeam</defName>
	<label>Gamma beam</label>
	<description>this should never be seen. if it is seen in game report to KitchenSink</description>
	<thingClass>taranchuk_lasers.LaserProjectile</thingClass>
	<category>Projectile</category>
	<drawOffscreen>true</drawOffscreen>
	<seeThroughFog>true</seeThroughFog>

	<graphicData>
		<graphicClass>Graphic_Single</graphicClass>
		<texPath>Things/Projectile/Seg_COTO_Gamma</texPath>
		<shaderType>TransparentPostLight</shaderType>
		<drawSize>1</drawSize>
	</graphicData>

	<projectile>
		<damageDef>Seg_COTO_GammaDamage</damageDef>
		<damageAmountBase>16</damageAmountBase>
		<armorPenetrationBase>0.30</armorPenetrationBase>
		<stoppingPower>0.3</stoppingPower>
		<speed>1000</speed>
		<soundImpact>Seg_COTO_Gamma</soundImpact>
	</projectile>

	<modExtensions>
		<li Class="taranchuk_lasers.LaserProperties">
			<damageTickRate>11</damageTickRate>
			<lifetimeTicks>10</lifetimeTicks>
			<beamWidth>1</beamWidth>
			<beamWidthDrawScale>1</beamWidthDrawScale>
			<sweepRatePerTick>0.005</sweepRatePerTick>
			<maxSweepAngle>0.5</maxSweepAngle>
			<damageThingsAcrossBeamLine>true</damageThingsAcrossBeamLine>
			<debugCells>false</debugCells>
			<textureScrollOffsetPerTick>(0.05, 0.1)</textureScrollOffsetPerTick>
			<lockOnTarget>true</lockOnTarget>
			<trailSoundDef>Seg_COTO_Gamma</trailSoundDef>
		</li>
	</modExtensions>
	</ThingDef>





	<!-- Stubber guns -->
	<ThingDef Abstract="true" ParentName="BaseHumanMakeableGun" Name="Seg_COTO_Stubber_base">
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<recipeMaker>
			<researchPrerequisite>Seg_COTO_AutoWeapons</researchPrerequisite>
			<displayPriority>420</displayPriority><!-- Remove if unecessary -->
			<recipeUsers Inherit="False">
				<li>Seg_COTO_CraftingTable</li>
		</recipeUsers>
		</recipeMaker>
		<thingSetMakerTags>
			<li>RewardStandardLowFreq</li>
		</thingSetMakerTags>
		<!-- Optional tags for trading and categorization 
		<tradeTags>
			<li></li>
		</tradeTags>
		<weaponTags>
			<li></li>
		</weaponTags>-->
	</ThingDef>

	<!-- Macrostubber -->
	<ThingDef ParentName="Seg_COTO_Stubber_base">
		<defName>Gun_COTO_Macrostubber</defName>
		<label>macrostubber</label>
		<description>Favoured by Tech-Priests, macrostubbers are able to hurling out a thunderous cloud of solid slugs.</description>
		<graphicData>
			<texPath>Things/Weapon/Seg_COTO_Ranged_Macrostubber</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.4</drawSize>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<uiIconScale>1.1</uiIconScale>
		<soundInteract>Interact_Rifle</soundInteract>
		<recipeMaker>
			<researchPrerequisites>
				<li>Seg_COTO_CultMechanicus</li>
			</researchPrerequisites>
			<skillRequirements>
				<Crafting>6</Crafting>
			</skillRequirements>
		</recipeMaker>
		<statBases>
			<WorkToMake>5000</WorkToMake>
			<Mass>2.8</Mass>
			<AccuracyTouch>0.90</AccuracyTouch>
			<AccuracyShort>0.65</AccuracyShort>
			<AccuracyMedium>0.40</AccuracyMedium>
			<AccuracyLong>0.20</AccuracyLong>
			<RangedWeapon_Cooldown>1.0</RangedWeapon_Cooldown>
		</statBases>
		<costList>
			<Steel>70</Steel>
			<ComponentIndustrial>5</ComponentIndustrial>
		</costList>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Seg_COTO_Bullet_Stubber</defaultProjectile>
				<warmupTime>0.7</warmupTime>
				<range>22.9</range>
				<burstShotCount>3</burstShotCount>
				<ticksBetweenBurstShots>10</ticksBetweenBurstShots>
				<soundCast>Seg_COTO_Stubber</soundCast>
				<soundCastTail>GunTail_Medium</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
			</li>
		</verbs>
		<weaponTags>
			<li>ShortShots</li>
			<li>Gun</li>
			<li>IndustrialGunAdvanced</li>
		</weaponTags>
		<tools>
			<li>
				<label>stock</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
			</li>
			<li>
				<label>barrel</label>
				<capacities>
					<li>Blunt</li>
					<li>Poke</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
			</li>
		</tools>
	</ThingDef>

	<!-- Arc weapons base -->
	<ThingDef ParentName="BaseHumanMakeableGun" Name="Seg_COTO_ArcWeaponBase" Abstract="True">
		<label>arc weapon (base)</label>
		<description>Base definition for arc‑energy weapons.this should never show in game, if it does report to KitchenSink.</description>
		<techLevel>Spacer</techLevel>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
			<li Class="CompProperties_Styleable"/>
			<li Class="CompProperties_Biocodable"/>
			<li>
				<compClass>CompQuality</compClass>
			</li>
			<li Class="CompProperties_Art">
				<nameMaker>NamerArtWeaponGun</nameMaker>
				<descriptionMaker>ArtDescription_WeaponGun</descriptionMaker>
				<minQualityForArtistic>Good</minQualityForArtistic>
			</li>
			<li Class="Core40k.CompProperties_MultiColor">
				<colorMaskAmount>3</colorMaskAmount>
				<defaultPrimaryColor>(0.23,0.23,0.23)</defaultPrimaryColor>
				<defaultSecondaryColor>(0.38,0.38,0.38)</defaultSecondaryColor>
				<defaultTertiaryColor>(0.79,0.58,0.08)</defaultTertiaryColor>
			</li>
		</comps>
		<recipeMaker>
			<researchPrerequisite>Seg_COTO_ArcPermacapacitors</researchPrerequisite>
			<recipeUsers Inherit="False">
				<li>Seg_COTO_CraftingTable</li>
			</recipeUsers>
		</recipeMaker>
	</ThingDef>
	
	<!-- Arc Pistol -->
	<ThingDef ParentName="Seg_COTO_ArcWeaponBase">
		<defName>Seg_COTO_ArcPistol</defName>
		<label>arc pistol</label>
		<description>A compact arc‑energy sidearm that fires a thin, tracking beam of searing energy.</description>

		<graphicData>
			<texPath>Things/Weapon/Seg_COTO_Ranged_ArcPistol</texPath>
			<shaderType>BEWH_CutoutThreeColor</shaderType>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.2</drawSize>
		</graphicData>

		<statBases>
			<Mass>2.5</Mass>
			<EquipDelay>0.5</EquipDelay>
			<RangedWeapon_Cooldown>1.0</RangedWeapon_Cooldown>
			<AccuracyTouch>0.80</AccuracyTouch>
			<AccuracyShort>0.90</AccuracyShort>
			<AccuracyMedium>0.80</AccuracyMedium>
			<AccuracyLong>0.55</AccuracyLong>
			<WorkToMake>6000</WorkToMake>
			<MarketValue>500</MarketValue>
		</statBases>

		<verbs>
			<li>
			<verbClass>Verb_Shoot</verbClass>
			<hasStandardCommand>true</hasStandardCommand>
			<defaultProjectile>Seg_COTO_ArcPistol_Beam</defaultProjectile>
			<soundCast>Seg_COTO_ArcSound</soundCast>
			<warmupTime>1</warmupTime>
			<range>20.0</range>
			<burstShotCount>1</burstShotCount>
			<ticksBetweenBurstShots>20</ticksBetweenBurstShots>
			<muzzleFlashScale>10</muzzleFlashScale>
			</li>
		</verbs>

		<costList>
			<Steel>40</Steel>
			<ComponentIndustrial>3</ComponentIndustrial>
		</costList>

			<recipeMaker>
				<researchPrerequisites>
					<li>Seg_COTO_TechGuard</li>
				</researchPrerequisites>
				<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
				<workSkill>Crafting</workSkill>
				<skillRequirements>
				<Crafting>6</Crafting>
				</skillRequirements>
			</recipeMaker>
		</ThingDef>
