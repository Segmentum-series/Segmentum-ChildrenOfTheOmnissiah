<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<DamageDef>
		<defName>Seg_COTO_MeleeElectricBurn</defName>
		<label>electric burn</label>
		<deathMessage>{0} has been electrocuted to death.</deathMessage>
		<workerClass>DamageWorker_AddInjury</workerClass>
		<externalViolence>true</externalViolence>
		<makesBlood>false</makesBlood>
		<impactSoundType>Electric</impactSoundType>
		<armorCategory>Heat</armorCategory>
		<explosionCellFleck>ElectricalSpark</explosionCellFleck>
		<explosionColorEdge>(0.8, 0.8, 1.0, 0.8)</explosionColorEdge>
		<explosionColorCenter>(1.0, 0.5, 0.0)</explosionColorCenter>
		<soundExplosion>Explosion_EMP</soundExplosion>
		<causeStun>true</causeStun>
		<stunAdaptationTicks>1800</stunAdaptationTicks>
		<hediff>Burn</hediff>
		<defaultDamage>15</defaultDamage>
		<defaultArmorPenetration>2.0</defaultArmorPenetration>
		<explosionHeatEnergyPerCell>5</explosionHeatEnergyPerCell>
	</DamageDef>
	<!-- Arc damage -->
	<DamageDef ParentName="Bullet">
		<defName>Seg_COTO_ArcDamage</defName>
		<label>arc burn</label>
		<workerClass>DamageWorker_AddInjury</workerClass>
		<armorCategory>Heat</armorCategory>
		<hediff>Burn</hediff>
		<causeStun>true</causeStun>
		<deathMessage>{0} was electrified to death.</deathMessage>
		<impactSoundType>Electric</impactSoundType>
		<defaultArmorPenetration>2.0</defaultArmorPenetration>
	</DamageDef>
	<!-- Gamma damage -->
	<DamageDef>
		<defName>Seg_COTO_GammaDamage</defName>
		<label>Radiation burn</label>
		<workerClass>DamageWorker_AddInjury</workerClass>
		<externalViolence>true</externalViolence>
		<hediff>Burn</hediff>
		<armorCategory>Heat</armorCategory>
